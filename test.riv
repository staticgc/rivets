    (opt meta: false)
    (in 
        name: "Name of the cluster"
        token: "Token value")
    (out
        x: "Integer"))

(flow myflow
    (in 
        replid:     "Replication ID"
        interval:   def:100 "Interval")
    (steps
        (Basic-Settings
            $unit:  std.define
            abc:    false
            +name:  $LAST[0]['data'])
        (std.print-vars
            abc:    false
            name:   nil)))


